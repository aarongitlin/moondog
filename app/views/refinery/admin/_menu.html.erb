<nav id="menu">
  <% ::Refinery::Plugins.active.in_menu.each do |plugin| -%>
    <%= link_to plugin.title, refinery.url_for(plugin.url),
                :class => ("active" if plugin.highlighted?(params)),
                :id => "plugin_#{plugin.name}" %>
    <% end %>
    <%= link_to 'Products', 
                 '/admin', 
                 :class => current_page?('/admin') ? "active" : "" %>
</nav>
