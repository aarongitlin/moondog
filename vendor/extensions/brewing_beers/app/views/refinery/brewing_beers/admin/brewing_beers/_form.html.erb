<%= form_for [refinery, :brewing_beers_admin, @brewing_beer] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @brewing_beer,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/brewing_beers/brewing_beer", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :darkness, 'Colour' -%>
    <%= f.select :darkness, Refinery::BrewingBeers::BrewingBeer::FIELD_LABELS[:darkness].invert -%>
  </div>
  
  <div class='field'>
    <%= f.label :bitterness -%>
    <%= f.select :bitterness, Refinery::BrewingBeers::BrewingBeer::FIELD_LABELS[:bitterness].invert -%>
  </div>
  
  <div class='field'>
    <%= f.label :abv -%>
    <%= f.select :abv, Refinery::BrewingBeers::BrewingBeer::FIELD_LABELS[:abv].invert -%>
  </div>
  
  <div class='field'>
    <%= f.label :is_displayed, 'Display on home page?' -%>
    <%= f.check_box :is_displayed, :checked => @brewing_beer[:is_displayed] -%>
  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.brewing_beers.admin.brewing_beers.brewing_beer'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @brewing_beer.name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
