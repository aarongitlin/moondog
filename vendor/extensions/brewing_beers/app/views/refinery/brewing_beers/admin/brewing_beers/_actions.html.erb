<ul>
  <% if ::Refinery::BrewingBeers::Admin::BrewingBeersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.brewing_beers_admin_brewing_beers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_brewing_beers_admin_brewing_beer_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::BrewingBeers::Admin::BrewingBeersController.sortable? && ::Refinery::BrewingBeers::BrewingBeer.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Brewing Beers"),
                 refinery.brewing_beers_admin_brewing_beers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Brewing Beers"),
                 refinery.brewing_beers_admin_brewing_beers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
