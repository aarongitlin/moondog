<% content_for :body_content_title do %>
  <%= @brewing_beer.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @brewing_beer.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @brewing_beer.description %>
    </p>
  </section>
  <section>
    <h1>Darkness</h1>
    <p>
      <%=raw @brewing_beer.darkness %>
    </p>
  </section>
  <section>
    <h1>Bitterness</h1>
    <p>
      <%=raw @brewing_beer.bitterness %>
    </p>
  </section>
  <section>
    <h1>Abv</h1>
    <p>
      <%=raw @brewing_beer.abv %>
    </p>
  </section>
  <section>
    <h1>Is Displayed</h1>
    <p>
      <%=raw @brewing_beer.is_displayed %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="brewing_beers">
      <% @brewing_beers.each do |brewing_beer| %>
        <li>
          <%= link_to brewing_beer.name, refinery.brewing_beers_brewing_beer_path(brewing_beer) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
