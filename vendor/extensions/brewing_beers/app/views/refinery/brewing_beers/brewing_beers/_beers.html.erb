<% unless @brewing_beers.empty? %>
  <div id="currently-brewing">
    <h2>Currently Brewing</h2>
    <% @brewing_beers.each do |beer| %>
      <div class="currently-brewing-beer">
        <% [:darkness, :bitterness, :abv].each do |field| %>
          <div class="field">
            <h3><%= refinery_brewing_beer_field_name(field) %></h3>
            <div class="value">
              <div class="label"><%= refinery_brewing_beer_field_label(beer, field) %></div>
              <div class="slider">
                <div class="slider-bar" style="width: <%= beer[field]*10 %>%"></div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="description"><%= raw beer.description %></div>
      </div>
    <% end %>
  </div>
<% end %>
