<% unless @brewing_beers.empty? %>
  <div id="currently-brewing">
    <h3>Currently Brewing</h3>
    <% @brewing_beers.each do |beer| %>
      <div class="currently-brewing-beer">
      	 <div class="brewing-description four columns"><%= raw beer.description %></div>
        <% [:darkness, :bitterness, :abv].each do |field| %>
          <div class="field six columns">
            <div class="value">
              <div class="label" style="margin-left: <%= beer[field]*10-3 %>%"><%= refinery_brewing_beer_field_label(beer, field) %></div>
              <div class="slider">
                <div class="slider-bar" style="width: <%= beer[field]*10 %>%"></div>
                            <h3><%= refinery_brewing_beer_field_name(field) %></h3>

              </div>
            </div>
          </div>
        <% end %>

       
      </div>
    <% end %>
  </div>
<% end %>
