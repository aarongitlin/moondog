<% content_for :body_content_title do %>
  <%= @beer_location.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @beer_location.name %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @beer_location.address %>
    </p>
  </section>
  <section>
    <h1>Latitude</h1>
    <p>
      <%=raw @beer_location.latitude %>
    </p>
  </section>
  <section>
    <h1>Longitude</h1>
    <p>
      <%=raw @beer_location.longitude %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="beer_locations">
      <% @beer_locations.each do |beer_location| %>
        <li>
          <%= link_to beer_location.name, refinery.beer_locations_beer_location_path(beer_location) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
