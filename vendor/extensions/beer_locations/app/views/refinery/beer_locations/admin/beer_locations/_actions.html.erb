<ul>
  <% if ::Refinery::BeerLocations::Admin::BeerLocationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.beer_locations_admin_beer_locations_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_beer_locations_admin_beer_location_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::BeerLocations::Admin::BeerLocationsController.sortable? && ::Refinery::BeerLocations::BeerLocation.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Beer Locations"),
                 refinery.beer_locations_admin_beer_locations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Beer Locations"),
                 refinery.beer_locations_admin_beer_locations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
